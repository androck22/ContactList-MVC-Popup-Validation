@model IEnumerable<ContactList.Models.Contact>

<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.MobilePhone)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.JobTitle)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.BirthDate)
		</th>
		<th>
				<a onclick="showInPopup('@Url.Action("AddOrEdit","Contacts",new{id = 0},Context.Request.Scheme)', 'New Contact')" class="btn btn-primary text-white">New Contact</a>
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MobilePhone)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.JobTitle)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.BirthDate)
			</td>
			<td>
				<a onclick="showInPopup('@Url.Action("AddOrEdit","Contacts",new{id = item.Id},Context.Request.Scheme)', 'Update Contact')" class="btn btn-primary text-white">Edit</a> |
				<form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
						<input type="submit" value="Delete" class="btn btn-primary text-white" />
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>

